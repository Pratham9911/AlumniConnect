<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Screen">

    <!-- Background Gradient Image -->

    <!-- Rotating Image Above Toggle -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

    <ImageView
        android:id="@+id/switchIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_switch_icon"
    />

    <!-- Login/Register Toggle -->
    <LinearLayout
        android:id="@+id/toggleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchIcon"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"

        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="62dp"
            android:layout_marginStart="13dp"> <!-- Spacing between login and register -->

            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#BDBDBD"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

<!--    email and passwords placeholders-->

<!--    Login-->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toggleLayout"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"

        android:visibility="invisible">

        <!-- Email Label -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="11dp"/>

        <!-- Email Field -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="@drawable/edittext_background"
            android:paddingHorizontal="16dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:drawableEnd="@drawable/baseline_alternate_email_24"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="11dp"/>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                app:tint="#FFFFFF" />
        </LinearLayout>


        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/button_bg"
            android:elevation="64dp"

            android:layout_marginBottom="16dp" />

        <!-- Or Separator -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <!-- Social Icons Layout -->
        <LinearLayout
            android:id="@+id/socialIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_google"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/circle_bg" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:src="@drawable/ic_github"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:background="@drawable/circle_bg" />
        </LinearLayout>
    </LinearLayout>

<!--    Register-->
    <LinearLayout
        android:id="@+id/registerFormLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toggleLayout"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:visibility="visible">

        <!-- Name Label -->
        <TextView
            android:id="@+id/regNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="11dp"
            android:labelFor="@id/regNameEditText" />

        <EditText
            android:id="@+id/regNameEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="16dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
             />


        <!-- Email Label -->
        <TextView
            android:id="@+id/regEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:labelFor="@id/regEmailEditText"
            android:layout_marginBottom="11dp" />

        <!-- Email Field -->
        <EditText
            android:id="@+id/regEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="16dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:drawableEnd="@drawable/baseline_alternate_email_24"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
             />


        <!-- Password Label -->
        <TextView
            android:id="@+id/regpasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:labelFor="@id/regpasswordEditText"
            android:layout_marginBottom="11dp" />

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/regpasswordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/regpasswordToggle"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Register Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="REGISTER"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/button_bg"
            android:layout_marginBottom="16dp" />

        <!-- Or Separator -->
        <TextView
            android:id="@+id/regOrText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <!-- Social Icons -->
        <LinearLayout
            android:id="@+id/regSocialIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_google"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/circle_bg" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_github"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:background="@drawable/circle_bg" />
        </LinearLayout>
    </LinearLayout>



    <!-- We'll add content here next -->

</RelativeLayout>
